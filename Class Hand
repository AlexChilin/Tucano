class Hand:
    def __init__(self):
        self.cards = []

    def __repr__(self):
        cards = []
        for i in self.cards:
            cards.append(i.value)
        return str(cards)

    def add_card(self, Card):
        self.cards.append(Card)

    def remove_card(self, Card):
        self.cards.remove(Card)
