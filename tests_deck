import unittest
from probeaction import Deck

class TestDeck(unittest.TestCase):

    def setUp(self):
        self.deck = Deck()

    def test_draw_card(self):
        self.deck.cards = [Card(), Card(), Card()]
        card = self.deck.draw_card()
        self.assertEqual(len(self.deck.cards), 2)

    def test_shuffle(self):
        cards_before = self.deck.cards[:]
        self.deck.shuffle()
        self.assertNotEqual(cards_before, self.deck.cards)

if __name__ == '__main__':
    unittest.main()
