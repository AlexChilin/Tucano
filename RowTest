import unittest
from probeaction import Row

class TestRow(unittest.TestCase):
    def setUp(self):
        self.row = Row()

    def test_add_card(self):
        self.row.add_card(Card())
        self.assertEqual(len(self.row.cards), 1)

    def test_take_cards(self):
        self.row.add_card(Card())
        cards = self.row.take_cards()
        self.assertEqual(len(cards), 1)
        self.assertEqual(len(self.row.cards), 0)
if __name__ == '__main__':
    unittest.main()
