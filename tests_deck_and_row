import unittest
from  import Row, Deck, Card

class TestRow(unittest.TestCase):

    def setUp(self):
        self.row = Row()

    def test_add_card(self):
        self.row.add_card(Card())
        self.assertEqual(len(self.row.cards), 1)

    def test_take_cards(self):
        self.row.add_card(Card())
        cards = self.row.take_cards()
        self.assertEqual(len(cards), 1)
        self.assertEqual(len(self.row.cards), 0)


class TestDeck(unittest.TestCase):

    def setUp(self):
        self.deck = Deck()

    def test_draw_card(self):
        self.deck.cards = [Card(), Card(), Card()]
        card = self.deck.draw_card()
        self.assertEqual(len(self.deck.cards), 2)

    def test_shuffle(self):
        cards_before = self.deck.cards[:]
        self.deck.shuffle()
        self.assertNotEqual(cards_before, self.deck.cards)

if __name__ == '__main__':
    unittest.main()
